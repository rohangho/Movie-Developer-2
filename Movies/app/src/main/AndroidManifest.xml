<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.movies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SampleApplication"
        android:allowBackup="true"
        android:icon="@drawable/movies"
        android:label="@string/app_name"
        android:roundIcon="@drawable/movies"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Detail_activity" />
        <activity
            android:name=".Favourite"
            android:label="Favourite" />
        <activity android:name=".Review" />
        <activity android:name=".Trailer_selector" />
        <activity android:name=".Trailer_Selector"></activity>
        <provider
            android:name="com.example.android.movies.Content_Provider"
            android:authorities="com.example.android.movies"
            android:exported="false"/>

    </application>

</manifest>